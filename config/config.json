{
  "system": {
    "version": "3.0.0",
    "author": "メルカリ自動化チーム",
    "description": "メルカリ画像判定システム設定（ROI抽出・テクスチャ検出対応版）"
  },
  "image_analysis": {
    "business_threshold": 50,
    "max_image_size": 1280,

    "personal_background": {
      "enabled": true,
      "wood_texture_threshold": 0.3,
      "periodic_texture_threshold": 0.3,
      "cluttered_threshold": 0.4,
      "uneven_lighting_threshold": 0.3,
      "detection_confidence_threshold": 0.6,
      "score_cap_when_detected": 30
    },

    "roi_extraction": {
      "enabled": true,
      "min_area_ratio": 0.1,
      "target_area_ratio": 0.25,
      "min_rectangularity": 0.8,
      "package_face_threshold": 0.6,
      "strong_package_threshold": 0.7,
      "score_cap_when_detected": 49
    },

    "package_face_analysis": {
      "text_density_threshold": 0.2,
      "icon_row_threshold": 0.3,
      "barcode_threshold": 0.5,
      "multicolor_print_threshold": 0.4,
      "flatness_threshold": 0.6,
      "min_features_for_detection": 3
    },

    "blister_pack": {
      "enabled": true,
      "hang_hole_threshold": 0.5,
      "plastic_reflection_threshold": 0.3,
      "two_layer_threshold": 0.4,
      "detection_confidence_threshold": 0.5,
      "penalty_when_detected": 30,
      "score_cap_when_detected": 40
    },

    "professional_features": {
      "enabled": true,
      "clean_background_threshold": 0.7,
      "center_placement_threshold": 0.6,
      "drop_shadow_threshold": 0.5,
      "uniform_lighting_threshold": 0.7,
      "min_features_for_bonus": 3,
      "max_bonus_points": 30
    },

    "global_package_features": {
      "text_density_threshold": 0.15,
      "rectangular_layout_threshold": 0.3,
      "detection_confidence_threshold": 0.5,
      "penalty_multiplier": 20
    },

    "penalties_and_bonuses": {
      "personal_background_cap": 30,
      "package_roi_penalty": 40,
      "package_global_penalty": 20,
      "blister_pack_penalty": 30,
      "professional_bonus": 30
    }
  },

  "folders": {
    "upload": "data/images/upload",
    "mercari_ok": "data/images/mercari_ok",
    "mercari_ng": "data/images/mercari_ng",
    "temp": "data/images/temp",
    "results": "data/results",
    "logs": "logs"
  },

  "file_handling": {
    "supported_formats": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"],
    "max_file_size_mb": 50,
    "auto_delete_ng": false,
    "backup_original": true
  },

  "logging": {
    "level": "INFO",
    "file_enabled": true,
    "console_enabled": true,
    "max_log_size_mb": 10,
    "backup_count": 5
  },

  "development": {
    "debug_mode": true,
    "save_debug_images": true,
    "show_processing_steps": true,
    "cache_enabled": true
  },

  "user_interface": {
    "language": "ja",
    "show_detailed_scores": true,
    "auto_open_results": false,
    "confirm_before_move": false
  }
}